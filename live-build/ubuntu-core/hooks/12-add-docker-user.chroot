#!/bin/sh -x

# FIXME: add click hook for user creation

USER=docker

echo "I: creating docker user"

addgroup --system --quiet $USER
adduser --system \
        --ingroup $USER \
        --disabled-login \
        --shell /bin/false \
        --no-create-home \
        $USER

# ensure that the ubuntu user has the right group
adduser ubuntu docker
